<Page
    x:Class="XboxToast.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XboxToast"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="20" Spacing="20">
            <Button
                x:Name="ButtonSchedule15Minutes"
                Content="Schedule for 15 minutes (for testing)"
                Click="ButtonSchedule15Minutes_Click"/>
            <Button
                x:Name="ButtonSchedule24Hours"
                Content="Schedule for 24 hours"
                Click="ButtonSchedule24Hours_Click"/>
            <Button
                x:Name="ButtonShowNow"
                Content="Show now"
                Click="ButtonShowNow_Click"/>
        </StackPanel>
    </Grid>
</Page>
